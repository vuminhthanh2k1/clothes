      "http": [
        {
          "path": "/payment-order",
          "verb": "post"
        }
      ]
    },
    "changeAmount": {
      "accepts": [
        {
          "arg": "ctx",
          "type": "any",
          "required": true,
          "description": "context of request",
          "http": {
            "source": "context"
          }
        },
        {
          "arg": "cartId",
          "type": "any",
          "required": true,
          "description": "change Amount",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "root": true,
        "type": "any"
      },
      "description": "change Amount",
      "http": [
        {
          "path": "/changeAmount",
          "verb": "get"
        }
      ]
    }
  }
}