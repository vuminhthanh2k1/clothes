{
  "name": "Cart",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "required": false,
      "validateUpsert": true
    }
  },
  "properties": {
    "code": {
      "type": "string"
    },
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "phoneNumber": {
      "type": "number"
    },
    "email": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "city": {
      "type": "number"
    },
    "district": {
      "type": "number"
    },
    "note": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "price": {
      "type": "number"
    },
    "inputPrice": {
      "type": "number"
    }
  },
  "validations": [],
  "relations": {
    "account": {
      "type": "belongsTo",
      "model": "Account",
      "foreignKey": ""
    },
    "clothes": {
      "type": "hasMany",
      "model": "Clothes",
      "foreignKey": "",
      "through": "CartClothes"
    },
    "cartClothes": {
      "type": "hasMany",
      "model": "CartClothes",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "SUPERADMIN",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "ADMIN",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "addToCart": {
      "accepts": [
        {
          "arg": "ctx",
          "type": "any",
          "required": true,
          "description": "context of request",
          "http": {
            "source": "context"
          }
        },
        {
          "arg": "product",
          "type": "object",
          "required": true,
          "description": "product",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "root": true,
        "type": "string"
      },
      "description": "check order by account token and product",
      "http": [
        {
          "path": "/add-to-cart",
          "verb": "post"
        }
      ]
    },
    "statisticByAmount": {
      "accepts": [
        {
          "arg": "ctx",
          "type": "any",
          "required": true,
          "description": "context of request",
          "http": {
            "source": "context"
          }
        },
        {
          "arg": "year",
          "type": "number",
          "required": true,
          "description": "year",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "root": true,
        "type": "any"
      },
      "description": "statistic order by year",
      "http": [
        {
          "path": "/statistic-amount",
          "verb": "get"
        }
      ]
    },
    "statisticByRevenue": {
      "accepts": [
        {
          "arg": "ctx",
          "type": "any",
          "required": true,
          "description": "context of request",
          "http": {
            "source": "context"
          }
        },
        {
          "arg": "year",
          "type": "number",
          "required": true,
          "description": "year",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "root": true,
        "type": "any"
      },
      "description": "statistic order by year",
      "http": [
        {
          "path": "/statistic-revenue",
          "verb": "get"
        }
      ]
    },
    "paymentOrder": {
      "accepts": [
        {
          "arg": "ctx",
          "type": "any",
          "required": true,
          "description": "context of request",
          "http": {
            "source": "context"
          }
        },
        {
          "arg": "data",
          "type": "any",
          "required": true,
          "description": "information payment",
          "http": {
            "source": "body"
          }
        }
      ],
      "returns": {
        "root": true,
        "type": "string"
      },
